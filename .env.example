# Core Configuration
PORT=4000
NODE_ENV=development
LOG_LEVEL=info

# Database (leave empty to use in-memory pg-mem)
DATABASE_URL=

# Redis (leave empty to run sync jobs inline without Redis)
REDIS_URL=

# Sync Configuration
SYNC_CRON_SCHEDULE=0 * * * *
RUN_INITIAL_SYNC_ON_STARTUP=true

# Pronote/Pawnote Configuration
PRONOTE_API_MODE=mock
PRONOTE_BASE_URL=
PRONOTE_SCHOOL_ID=demo-school
PRONOTE_STUDENT_ID=demo-student
PRONOTE_CLIENT_ID=demo-client
PRONOTE_CLIENT_SECRET=demo-secret
PRONOTE_DEFAULT_TIME_ESTIMATE_MINUTES=45

# Google OAuth 2.0 Configuration
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:4000/auth/google/callback
# GOOGLE_SCOPES=https://www.googleapis.com/auth/documents,https://www.googleapis.com/auth/drive.readonly,https://www.googleapis.com/auth/calendar.readonly
